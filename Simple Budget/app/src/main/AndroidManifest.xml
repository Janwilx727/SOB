<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.popbox.jan.simplebudget">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launch_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launch_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />

        <activity android:name=".AddCategory"
            android:screenOrientation="portrait"/>
        <activity android:name=".CategoryInfo"
            android:screenOrientation="portrait"/>
        <activity android:name=".ArchiveActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ExpenseHistory"
            android:screenOrientation="portrait"/>
        <activity android:name=".SetBudgetDate"
            android:screenOrientation="portrait"/>

    </application>

</manifest>